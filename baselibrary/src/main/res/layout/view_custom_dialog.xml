<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlyt_custom_dialog_convert"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llyt_custom_dialog_root"
        android:layout_width="@dimen/PX_253"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/PX_80"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_custom_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_custom_dialog_title"
            android:gravity="center"
            android:padding="@dimen/PX_12"
            android:textColor="@color/color333333"
            android:textSize="@dimen/SP_14"
            tools:text="桌台管理" />

        <RelativeLayout
            android:id="@+id/rlyt_custom_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/PX_12">

            <LinearLayout
                android:id="@+id/llyt_custom_dialog_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:padding="@dimen/PX_8"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_custom_dialog_msg_icon"
                    android:layout_width="@dimen/PX_30"
                    android:layout_height="@dimen/PX_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/PX_20"
                    android:scaleType="fitXY"
                    tools:src="@drawable/mbase_ic_warning" />

                <TextView
                    android:id="@+id/tv_custom_dialog_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/color666666"
                    android:textSize="@dimen/SP_14"
                    tools:text="该餐台已下单" />

            </LinearLayout>

            <com.mwee.smartcatering.widget.ClearableEditText
                android:id="@+id/et_custom_dialog_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_custom_dialog_edit"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="请输入新餐桌号"
                android:padding="@dimen/PX_6"
                android:singleLine="true"
                android:textColor="@color/color333333"
                android:textSize="@dimen/SP_14"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/editoutside" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_custom_dialog_negative"
                style="@style/CustomDialogButtonNegative"
                android:background="@drawable/bg_custom_dialog_left"
                android:text="取消" />

            <View
                android:id="@+id/v_bottom_line"
                android:layout_width="1px"
                android:layout_height="@dimen/PX_40"
                android:background="@color/editoutside" />

            <TextView
                android:id="@+id/tv_custom_dialog_positive"
                style="@style/CustomDialogButton"
                android:background="@drawable/bg_custom_dialog_right"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>